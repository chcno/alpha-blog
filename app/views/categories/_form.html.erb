<div class="container">




<div class="row justify-content-center">
<div class="col-10">
  <%= render 'shared/errors', obj: @category %>
    <%= form_with(model: @category ,class:"shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row mb-2">
          <%=   f.label :name  ,"Category name", class: "col-2 col-form-label text-light" %>
              <div class="col-8">

                <%=   f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
              </div>

        </div>





      <div class="form-group row justify-content-center">
        <div class="col-4 m-3 text-center">


        <%= f.submit  class: "btn btn-outline-light btn-lg" %>
          </div>
      </div>
    <% end %>


</div>

<%= link_to "[ Cancel and return to category]", category_path, class: "text-center text-info" %>
</div>
</div>
