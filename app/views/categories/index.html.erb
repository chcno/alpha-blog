<h1 class="text-center">Here are all the categories </h1>



<div class="flickr_pagination ">

  <%= will_paginate @category, :container => false %>
</div>
<div class="container">
    <% @category.each do |categories|  %>
    <div class="row  d-flex justify-content-center">

        <div class="col-sm-12 col-md-4">
          <div class="card text-center m-5 shadow bg-white rounded">

                      <div class="card-body">
                        <h5 class="card-title">
                           <%= link_to categories.name, categories, class: "text-success" %></h5>
                           <p class="card-text"> <%= pluralize(categories.articles.count, "article") %></p>


                    <div class="card-footer text-muted">Created
                      <%=  time_ago_in_words(categories.created_at)  %> ago

                   </div>
              </div>
          </div>

        </div>
      </div>
<% end %>
<div class="flickr_pagination pb-5">
  <%= will_paginate @category, :container => false %>

</div>
<br>

</div>
