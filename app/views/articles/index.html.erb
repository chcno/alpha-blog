<h1>Article listing page</h1>


<table>
      <thead>
        <tr>
          <th>Title</th>
          <th>Description</th>
          <th colspan="3">Actions</th>
        </tr>
      </thead>

      <tbody>
        <% @articles.each do |n| %>
        <tr>
          <td><%=  n.title %></td>
          <td><%=  n.description %></td>
          <td><a href="/articles/<%= n.id %>/edit">edit</a></td>
          <td><%= link_to "edit", edit_article_path(n)%></td>
          <td><%= link_to "show", article_path(n) %></td>
         <td> <%# <%= link_to "Delete", article_path(n), method: :delete %>
           <%= button_to "Destroy this article", article_path(n), method: :delete %>
       </td>

        <td></td>
        </tr>


        <% end %>
      </tbody>
</table>
<button>
<%= link_to "Crear nuevo articulo", new_article_path %>
</button>
